---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link href="https://fonts.googleapis.com/css2?family=Shadows+Into+Light&family=Patrick+Hand&family=Comic+Neue:wght@300&display=swap" rel="stylesheet">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.28.0/themes/prism-tomorrow.min.css" rel="stylesheet" />
		<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.28.0/prism.min.js"></script>	  
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
body {
	background-color: #fdfcfc;
      background-image: linear-gradient(90deg, rgba(170, 170, 170, 0.1) 1px, transparent 1px), 
                        linear-gradient(180deg, rgba(211, 209, 209, 0.1) 1px, transparent 1px);
      background-size: 90px 60px; /* Tama√±o de las celdas */
      margin: 0;
      padding: 0;
      min-height: 100vh;
}
</style>

