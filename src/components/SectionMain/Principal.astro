---
import { ObjetoPractica } from "../../js/ObjetoPractica"

---
{
ObjetoPractica.map((practica) => (
   
  
    <section class="flex flex-col gap-3  bg-white py-7 px-7 mb-8 rounded shadow-sm border-[1px] border-[#f5f5f5]">
        <div class="container-subtitulo w-full flex justify-between items-center mb-3">
            <h2 class="font-lapizTitulo text-3xl  font-bold  ">{practica.NumeroEjercicio} : {practica.nombre}</h2>
            {practica.dificultad === "Fácil" && (
            <span class="text-green-500">▰▱▱</span>
            )}
            {practica.dificultad === "Intermedio" && (
            <span class="text-yellow-500">▰▰▱</span>
            )}
            {practica.dificultad === "Difícil" && (
            <span class="text-red-500">▰▰▰</span>
            )}
        </div>
        <p class="font-lapizTexto text-[17px] py-2 text-gray-500">
            {practica.descripcion}
        </p>
        <div class="py-4">
            <h3 class="font-bold font-lapizTitulo text-2xl">Restricciones :</h3>
            <ul class="font-lapizTexto list-disc text-[17px]  text-gray-500 mx-6">
                {
                    practica.restricciones.map((restriccion) => (
                        <li class="py-1">{restriccion}</li>
                    ))
                }
                
            </ul>
        </div>
        <pre class="bg-white"><code class="language-js ">
            {practica.CasosPrueba}
        </code>
       </pre>
        
        <div class=" btn-respuesta flex items-center justify-between px-4 w-full py-2    rounded-xl  cursor-pointer  bg-[#ffe642a6] hover:bg-[#ffe642] ">
            <button  class="text-black font-bold ">
                Solución
            </button>
            <span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 9-7 7-7-7"/></svg>
            </span>
        </div>

         {/* Respuestas  */}
         <section  class="container-solucion hidden   ">
            <div class="flex flex-col gap-6">
                {
                    practica.soluciones.map((solucion) => (
                        <div id="content-codigo-solucion" class="p-3 border-b-[1px] border-gray-500 ">
                            <div class=" flex  justify-between items-center text-center">
                                 <h4 class="font-bold font-lapizTitulo text-2xl ">{solucion.forma} </h4>
                                 <a target="_blank" class="text-sm border-[1px] border-[#ffe11e] bg-[#f0da4f0c] rounded-md px-3 py-1  font-bold transition-all duration-75 ease-in  hover:bg-[#ffe642a6] "   href={solucion.link}>{solucion.metodo}</a>
                            </div>
                            <p class="text-gray-500 py-2 "> {solucion.explicacion}</p>
                            {/* Codigo */}
                            <pre class="bg-white"><code class="language-js ">
                                {solucion.codigo}
                            </code></pre>
                        </div>
                    ))
                }
                
            </div>         

         </section>
           
    </section>
))}



<script>
window.addEventListener('DOMContentLoaded', () => {
    const buttons = document.querySelectorAll('.btn-respuesta');
    const exits = document.querySelectorAll('.btn-exit-solucion');
    const solutions = document.querySelectorAll('.container-solucion');

    buttons.forEach((button, index) => {
        button.addEventListener('click', () => {
            solutions[index].classList.toggle('hidden');
        });
    });

    
});

</script>
   




